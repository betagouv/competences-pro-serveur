# frozen_string_literal: true

panel 'Détails de la campagne' do
  attributes_table_for campagne do
    row :id
    row :libelle
    row :code
    row :questionnaire
    row :created_at
  end
end

panel 'Configuration' do
  reorderable_table_for campagne.situations_configurations do
    column :position
    column :situation
  end
end

panel 'Évaluations' do
  table_for campagne.evaluations do
    column :nom do |evaluation|
      auto_link(evaluation)
    end
    column :created_at
  end
end
