# frozen_string_literal: true

panel 'Détails de la campagne' do
  attributes_table_for campagne do
    row :id
    row :libelle
    row :code
    row :affiche_competences_fortes
    row :questionnaire
    row :compte if can?(:manage, Compte)
    row :created_at
  end
end

panel 'Temps passation moyen' do
  evaluations = Evaluation.where(campagne: resource)
  temps_par_evaluation = evaluations.collect do |e|
    StatistiquesEvaluation.new(e).temps_total
  end
  div temps_par_evaluation.count
  div temps_par_evaluation.compact.count
  div formate_duree(temps_par_evaluation.compact.max)
  div temps_par_evaluation.collect{ |t| formate_duree t }.to_s
  moyenne = DescriptiveStatistics.mean(temps_par_evaluation.compact)
  div formate_duree moyenne
end

panel 'Configuration' do
  reorderable_table_for campagne.situations_configurations.includes(:situation) do
    column :situation
  end
end

panel 'Consulter' do
  ul do
    li link_to "les #{resource.nombre_evaluations} évaluations",
               admin_campagne_evaluations_path(resource)
    if can?(:manage, resource)
      li link_to 'les stats', admin_campagne_stats_path(resource)
      li link_to 'les événements', admin_campagne_evenements_path(resource)
    end
  end
end
