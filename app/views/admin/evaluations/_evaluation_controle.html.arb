# frozen_string_literal: true

panel t('.restitution_controle') do
  attributes_table_for evaluation do
    row t('.pieces_bien_placees'), &:nombre_bien_placees
    row t('.pieces_mal_placees'), &:nombre_mal_placees
    row t('.pieces_ratees'), &:nombre_ratees
    row(t('.frise')) { render 'controle_frise_pieces', evaluation: evaluation }
    row(t('.rapidite')) { Competence::ControleRapidite.new(evaluation).niveau }
    row(t('.comparaison')) { Competence::ControleComparaisonTri.new(evaluation).niveau }
    row(t('.attention')) { Competence::ControleAttentionConcentration.new(evaluation).niveau }
  end
end
