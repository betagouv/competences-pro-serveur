# frozen_string_literal: true

div class: 'row' do
  restitution.competences_de_base.each do |competence, niveau|
    label = t("#{competence}.nom", scope: 'admin.evaluations.restitution_competence')

    div class: "competences-base #{rapport_colonne_class}" do
      span label, class: 'label'
      valeur = niveau == ::Competence::NIVEAU_INDETERMINE ? 'indéterminé' : ''
      span valeur, class: "niveau-competence-base niveau-#{niveau}"
    end
  end
end
