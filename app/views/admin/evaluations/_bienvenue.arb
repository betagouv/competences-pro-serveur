    next unless question.type_qcm == 'jauge'

    div class: 'row' do
      div class: 'col libelle-question' do
        div question.libelle
      end
      div class: 'col' do
        div class: 'jauge' do
          div strong reponse.position, class: "position-#{reponse.position} puce"
        end
      end
    end
  end
  auto_positionnement.questions_et_reponses.each do |question, reponse|
    next if question.type_qcm == 'jauge'

    div class: 'row' do
      div class: 'col' do
        div question.libelle
      end
      div class: 'col' do
        div simple_format(reponse.intitule), class: 'my-2'
      end
    end
  end
end
